{
  "type": "object",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://oxidized.example.com/schemas/node.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "anyOf": [
        { "format": "hostname" },
        { "format": "ipv4" },
        { "format": "ipv6" }
      ]
    },
    "full_name": {
      "type": "string",
      "anyOf": [{
	      "pattern": "^.*\/.*$"
      }, {
        "anyOf": [
          { "format": "hostname" },
          { "format": "ipv4" },
          { "format": "ipv6" }
        ]
      }]
    },
    "ip": {
      "type": "string",
      "anyOf": [
        { "format": "ipv4" },
        { "format": "ipv6" }
      ]
    },
    "group": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "success", "no_connection"]
    },
    "model": {
      "type": "string",
      "pattern": "^[a-zA-Z]*$"
    },
    "vars": {
      "type": "object"
    },
    "last": {
      "oneOf": [{
        "type": "string",
        "format": "date-time"
      }, {
        "type": "null"
      }]
    },
    "time": {
      "oneOf": [{
        "type": "number",
        "minimum": 0
      }, {
        "type": "null"
      }]
    },
    "required": ["name", "full_name", "ip", "group", "status", "model", "vars", "last", "time"]
  }
